{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                
    "moduleResolution": "nodenext",    // ‚Üê abilita risoluzione ESM secondo Node16+/NodeNext
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // BASEURL + PATHS per rimappare il modulo al file .d.ts
    "baseUrl": ".",                          
    "paths": {
      "@unitn-asa/deliveroo-js-client": [
        "src/types/deliveroo-js-client.d.ts"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
